<form action="/jobPosterProfile/postBox" class="form" method="POST">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title text-center">Create a Post</h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <textarea id="text" name="text" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <label for="category">Category:</label>
              <select id="category" name="category" class="form-select">
                <% for(var i=0;i<category.length;i++) {%>
                  <option value=" <%=category[i].catagoryName%>">
                    <%=category[i].catagoryName%>
                  </option>
                  <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="location">Location:</label>
              <input type="text" id="location" name="location" class="form-control">
            </div>
            <div class="d-grid mt-3">
              <button id="submit-post" class="btn btn-primary" type="submit">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>